<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">

            <div class="row m-t-30">
                <div class="col-md-12">
                    <!-- DATA TABLE-->
                    <form action="/dashboard/subcategories" method="POST" class="row form-group mb-5">
                        <div class="col col-md-3">
                            <label for="text-input" class=" form-control-label mt-3"> Title: </label><br>
                            <label for="text-input" class=" form-control-label mt-3"> Slug: </label><br>
                            <label for="text-input" class=" form-control-label mt-3"> Category: </label><br>
                            <label for="text-input" class=" form-control-label mt-3">Description: </label>
                        </div>
                        <div class="col-9 col-md-6">
                            <input type="text" id="text-input" name="title"
                                class="form-control mt-3">
                            <input type="text" id="text-input" name="slug" 
                                class="form-control mt-3"><br>
                            <select name="category" id="category" class="form-control">
                                {{#each categories}}
                                <option value="{{_id}}">{{title}}</option>
                                {{/each}}
                            </select><br>
                            <textarea name="description" id="edit" cols="30" rows="10"
                                class="form-control mt-3"></textarea><br>
                            <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>add </button>
                        </div>
                    </form>
                    <div class="table-responsive m-b-40">
                        <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                    <th>date</th>
                                    <th>name</th>
                                    <th>slug</th>
                                    <th>action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each subcategories}}
                                <tr>
                                    <td>{{creationDate}}</td>
                                    <td>{{title}}</td>
                                    <td>{{slug}}</td>
                                    <td>
                                        <a href="/dashboard/subcategory/edit/{{slug}}"
                                            class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                                        <form action="/dashboard/subcategory/delete/{{id}}?newMethod=DELETE" method="post">
                                            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE-->
                </div>
            </div>