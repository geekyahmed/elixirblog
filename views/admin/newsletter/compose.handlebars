<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>Compose</strong> Newsletter
                        </div>
                        <div class="card-body card-block">
                            <form action="/dashboard/newsletter/compose" method="post" enctype="multipart/form-data"
                                class="form-horizontal">
                                <div class="row form-group">
                                    <div class="col col-md-9">
                                        <label for="text-input" class=" form-control-label">Subject: </label>
                                    </div>
                                    <div class="col-12 col-md-12">
                                        <input type="text" id="text-input" name="title" placeholder="Subject"
                                            class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-9">
                                        <label for="textarea-input" class=" form-control-label">Body: </label>
                                    </div>
                                    <div class="col-12 col-md-12">
                                        <textarea name="body" id="textarea-input" rows="9" placeholder="Content..."
                                            class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button id="create-button" type="submit" class="btn btn-lg btn-info btn-block">
                                        <i class="fa fa-plus fa-lg"></i>&nbsp;
                                        <span id="payment-button-amount">Compose and Send</span>
                                    </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>