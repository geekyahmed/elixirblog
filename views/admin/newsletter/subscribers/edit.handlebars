<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">

            <div class="row m-t-30">
                <div class="col-md-12">
                    <!-- DATA TABLE-->
                    <form action="/dashboard/newsletter/subscriber/edit/{{subscriber._id}}?newMethod=PUT" method="POST"
                        class="row form-group mb-5">
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-3">
                                    <label for="exampleInputName">First name</label>
                                    <input name="firstName" class="form-control" id="exampleInputName" type="text"
                                        aria-describedby="nameHelp" placeholder="Enter first name"
                                        value="{{subscriber.firstName}}">
                                </div>
                                <div class="col-md-4">
                                    <label for="exampleInputLastName">Last name</label>
                                    <input name="lastName" class="form-control" id="exampleInputName" type="text"
                                        aria-describedby="nameHelp" placeholder="Enter last name"
                                        value="{{subscriber.lastName}}">
                                </div>
                                <div class="col-md-5">
                                    <label for="exampleInputLastName">Email</label>
                                    <input name="email" class="form-control" id="exampleInputEmail" type="text"
                                        aria-describedby="emailHelp" placeholder="Enter email address"
                                        value="{{subscriber.email}}">
                                </div>
                                <input type="hidden" value="{{subscriber.id}}">

                            </div><br><br>

                            <button type="submit" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>Update </button>
                        </div>

                    </form>
                    <div class="table-responsive m-b-40">
                        <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                    <th>date</th>
                                    <th>first name</th>
                                    <th>last name</th>
                                    <th>email</th>
                                    <th>action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each subscribers}}
                                <tr>
                                    <td>{{creationDate}}</td>
                                    <td>{{firstName}}</td>
                                    <td>{{lastName}}</td>
                                    <td>{{email}}</td>
                                    <td>
                                        <a href="/dashboard/newsletter/subscriber/edit/{{id}}"
                                            class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                                        <form action="/dashboard/newsletter/subscriber/delete/{{id}}?newMethod=DELETE"
                                            method="post">
                                            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE-->
                </div>
            </div>