<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <!-- DATA TABLE -->
                    <h3 class="title-5 m-b-35">All Posts</h3>
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>category</th>
                                    <th>Type</th>
                                    <th>status</th>
                                    <th>Allow Comments</th>
                                    <th>comments</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each posts}}
                                <td>{{title}}</td>
                                <td>
                                    <span class="block-email">{{author.firstName}} {{author.lastName}}</span>
                                </td>
                                <td class="desc">{{category.title}}</td>
                                <td>{{type}}</td>
                                <td>
                                    <span class="status--process">{{status}}</span>
                                </td>
                                <td>{{allowComments}}</td>

                                <td>{{comments.length}}</td>
                                <td>
                                    <div class="table-data-feature">
                                        <a href="/dashboard/posts/edit/{{slug}}" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                            <i class="zmdi zmdi-edit"></i>
                                        </a>
                                        <form action="/dashboard/posts/delete/{{id}}?newMethod=DELETE" method="post">
                                            <button class="item" data-toggle="tooltip" data-placement="top" type="submit" title="Delete">
                                            <i class="zmdi zmdi-delete"></i>
                                        </button>
                                        </form>
                                        
                                    </div>
                                </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="copyright">
                <p>Copyright Â© 2018 Colorlib. All rights reserved. Template by <a
                        href="https://colorlib.com">Colorlib</a>.</p>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>

</div>