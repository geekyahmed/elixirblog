<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <!-- USER DATA-->
                        <div class="user-data m-b-30">
                            <h3 class="title-3 m-b-30">
                                <i class="zmdi zmdi-account-calendar"></i>Authors</h3>

                            <div class="table-responsive table-data">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <td>first name</td>
                                            <td>last name</td>
                                            <td>email</td>
                                            <td>role</td>
                                            <td>date</td>
                                            <td>action</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each authors}}
                                        <tr>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{firstName}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{lastName}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6 style="text-transform: lowercase;">{{email}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{role}}</h6>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{date}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <form class="form-group" action="/dashboard/author/edit/{{username}}"
                                                    method="GET">
                                                    <button type="submit" class="btn btn-primary">Edit</button>
                                                </form>
                                                <form class="form-group"
                                                    action="/dashboard/author/delete/{{id}}?newMethod=DELETE"
                                                    method="POST">
                                                    <button type="submit" class="btn btn-primary">Delete</button>
                                                </form>
                                            </td>
                                            <td>
                                                <span class="more">
                                                    <i class="zmdi zmdi-more"></i>
                                                </span>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            <div class="user-data__footer">
                                <button class="au-btn au-btn-load">load more</button>
                            </div>
                        </div>
                        <!-- END USER DATA-->
                    </div>