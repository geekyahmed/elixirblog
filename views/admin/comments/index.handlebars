<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <!-- USER DATA-->
                        <div class="user-data m-b-30">
                            <h3 class="title-3 m-b-30">
                                <i class="zmdi zmdi-account-calendar"></i>Comments</h3>

                            <div class="table-responsive table-data">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <td>name</td>
                                            <td>email</td>
                                            <td>body</td>
                                            <td>Approve Comment</td>
                                            <td>date</td>
                                            <td>action</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each comments}}
                                        <tr>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{full_name}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{email}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{{body}}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <label class="switch switch-text switch-primary switch-pill">
                                                    <input type="checkbox" class="switch-input" {{#if commentIsApproved}}checked="checked" {{/if}} value="commentIsApproved">
                                                    <span data-on="On" data-off="Off" class="switch-label"></span>
                                                    <span class="switch-handle"></span>
                                                </label>
                                            </td>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{date}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <form class="form-group"
                                                    action="/dashboard/comment/delete/{{id}}?newMethod=DELETE"
                                                    method="POST">
                                                    <button type="submit" class="btn btn-primary">Delete</button>
                                                </form>
                                            </td>
                                            <td>
                                                <span class="more">
                                                    <i class="zmdi zmdi-more"></i>
                                                </span>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            <div class="user-data__footer">
                                <button class="au-btn au-btn-load">load more</button>
                            </div>
                        </div>
                        <!-- END USER DATA-->
                    </div>